<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <p class="text-green-500"><%= notice %></p>
  <%= render @task %>
  <div class="mt-4">
    <%= link_to "Edit this task", edit_task_path(@task), class: "text-blue-500 hover:underline" %> |
    <%= link_to "Back to tasks", tasks_path, class: "text-blue-500 hover:underline" %>
    <%= button_to "Destroy this task", @task, method: :delete, class: "text-red-500 hover:underline" %>
  </div>
</div>