<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-xl">
  <div class="text-green-500">
    <%= notice %>
  </div>
  <h1 class="text-2xl font-bold mb-4">Tasks</h1>
  <div id="tasks" class="space-y-4">
    <% @tasks.each do |task| %>
      <%= link_to task do %>
        <div class="p-4 bg-white shadow-lg rounded-lg mb-4">
          <%= render task %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= link_to "New task", new_task_path, class: "mt-4 inline-block bg-blue-500 text-white rounded px-4 py-2 hover:bg-blue-600" %>
</div>